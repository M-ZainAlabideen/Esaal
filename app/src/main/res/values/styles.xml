<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--remove White screen is displayed while switching between Activities-->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:maxWidth">300dp</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="FragmentTitle">
        <item name="android:fontFamily">@font/cairo_bold</item>
    </style>

</resources>
