<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_subject_cl_subjectBg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/tap_larg_white"
    android:gravity="center"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingStart="25dp"
    android:paddingEnd="25dp">

    <TextView
        android:id="@+id/item_subject_tv_subjectName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/subject"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/item_subject_v_select"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_subject_tv_subjectName"
        app:layout_constraintStart_toStartOf="@+id/item_subject_tv_subjectName"
        app:layout_constraintTop_toBottomOf="@+id/item_subject_tv_subjectName" />


</androidx.constraintlayout.widget.ConstraintLayout>



